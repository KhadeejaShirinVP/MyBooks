@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}

@if(TempData["Success"]!= null)
{
    <h2>@TempData["Success"]</h2>
}

@*<h1>Index Book</h1>*@
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Book List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Book" asp-action="Create" class="btn btn-primary"></a>
            <i class="bi bi-plus-circle"></i> &nbsp; Create New Book
        </div>
    </div>
    <br /><br />
<table class="table table-bordered table-striped" style="width:100%">
  <thead>
      <tr>
          <th>
                Title
          </th>
          <th>
                Author
          </th>
          <th>
                price
          </th>
          <th></th>
      </tr>
      </thead>
      <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="30%">
                    @obj.Title
                </td>
                <td width="30%">
                    @obj.Author
                </td>
                <td width="15%">
                    @obj.price
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Book" asp-action="Edit" asp-route-bookId="@obj.Book_ID"
                            class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Book" asp-action="Delete" asp-route-bookId="@obj.Book_ID"
                           class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
